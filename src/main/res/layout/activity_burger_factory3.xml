<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey"
    tools:context=".BurgerFactory3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="290dp"
        android:background="#F3C623"
        tools:ignore="RtlHardcoded">

        <TextView
            android:id="@+id/textburger1"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="Картошка и напитки"
            android:textColor="#000000"
            android:textSize="36sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textmenu"
            android:layout_width="420dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="Картошка: фри, упаковка. Наггетсы: наггетсы, упаковка.\nНапиток: кола, фанта."
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:id="@+id/niz"
            android:layout_width="390dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="16dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/home"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/home" />

            <ImageView
                android:id="@+id/radi"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/radi" />

            <ImageView
                android:id="@+id/code"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/code" />

            <ImageView
                android:id="@+id/gloves"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/gloves" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="52dp"
            android:layout_above="@+id/niz"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="310dp"
            android:layout_marginBottom="13dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/six"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/six" />

            <ImageView
                android:id="@+id/loopa"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/loopa" />

            <ImageView
                android:id="@+id/bucket"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/bucket" />

            <ImageView
                android:id="@+id/box"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/box" />


        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/bftext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_marginStart="40dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/audiowide"
        android:gravity="center_horizontal"
        android:scaleX="1.7"
        android:text="Burger\nFactory"
        android:textColor="#FFC800"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.128" />

    <ImageView
        android:id="@+id/imgburger1"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:src="@drawable/ocr" />


</RelativeLayout>