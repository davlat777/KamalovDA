<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/backburger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/burgerback" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="310dp"
        android:background="#F3C623"
        tools:ignore="RtlHardcoded">

        <TextView
            android:id="@+id/textburger"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="120dp"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="Производство бургеров и соусов"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="490dp"
        android:layout_marginRight="70dp"
        android:background="#F3C623">

        <TextView
            android:id="@+id/textfree"
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:layout_centerInParent="false"
            android:layout_centerVertical="true"
            android:layout_marginRight="120dp"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="Производство бургеров и соусов"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold|italic" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="55dp"
        android:layout_height="33dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="385dp"
        >

        <Button
            android:id="@+id/burgerbtm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/grey"
            android:foregroundGravity="center_vertical|center|center_horizontal"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="+"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="55dp"
        android:layout_height="33dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="565dp">

        <Button
            android:id="@+id/freebtm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/grey"
            android:foregroundGravity="center_vertical|center|center_horizontal"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="+"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/bftext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_marginStart="40dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/audiowide"
        android:gravity="center_horizontal"
        android:scaleX="1.7"
        android:text="Burger\nFactory"
        android:textColor="#FFC800"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.128" />

    <ImageView
        android:id="@+id/imgburger"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="280dp"
        android:src="@drawable/scale_1200" />

    <ImageView
        android:id="@+id/imgfree"
        android:layout_width="190dp"
        android:layout_height="150dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="430dp"
        android:src="@drawable/ocr" />

</RelativeLayout>
